<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_pg1_listitem"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:paddingBottom="3dip"
              android:paddingLeft="10dip"
              android:layout_height="match_parent">
    <ImageView android:id="@+id/iv_pg1_hotblogs" android:layout_width="70dip"
               android:layout_height="70dip"
               android:layout_gravity="center"
               />
    <LinearLayout android:id="@+id/layout_pg1_hotblogs" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical" android:paddingLeft="5dip"
                  android:paddingRight="5dip"
                  android:orientation="vertical">
        <TextView android:id="@+id/tv_pg1_title" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="11" android:textStyle="bold"/>
        <TextView android:id="@+id/tv_pg1_content" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="bbbb"/>
    </LinearLayout>
</LinearLayout>