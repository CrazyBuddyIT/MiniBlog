<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_main_pg4"
              android:orientation="vertical"
              android:paddingLeft="5dip"
              android:paddingRight="5dip"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/pcenter_bg_lightgray">
    <!--<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="个人中心"/>-->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:paddingTop="5dip">

        <ImageView
                android:id="@+id/iv_pCenter_headIcon"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:paddingLeft="5dip" android:paddingRight="5dip"
                android:paddingBottom="5dip"
                android:src="@drawable/head_none"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:paddingLeft="5dip"
                      android:orientation="vertical">
            <TextView android:id="@+id/tv_pCenter_nickName" android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textStyle="bold"
                      android:textColor="@android:color/black"
                      android:text="您尚未登录" android:textSize="16sp"/>
            <TextView android:id="@+id/tv_pCenter_blogAddress" android:layout_width="180dip"
                      android:layout_height="wrap_content" android:textSize="14sp"
                      android:textColor="@android:color/darker_gray"
                      android:text="http://blog.sina.com.cn"/>

        </LinearLayout>
         <TextView  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="  点击认证" android:textSize="15sp"  android:layout_gravity="center_vertical" android:id="@+id/tv_headinfo_modify"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical" android:paddingTop="5dip">
        <TextView android:id="@+id/tv_pcenter_info" android:text="个人信息" android:layout_width="match_parent" android:background="@android:color/white"
                  android:textSize="16sp" android:textColor="@android:color/black" android:layout_height="45dip" android:layout_marginTop="10dip" android:paddingLeft="5dip" android:gravity="center_vertical"
                  android:onClick=""/>

        <TextView android:id="@+id/iv_pcenter_blogMainPage"  android:textColor="@android:color/black" android:text="微博主页" android:paddingLeft="5dip" android:layout_width="match_parent"
                  android:textSize="16sp" android:layout_height="45dip" android:layout_marginTop="10dip" android:gravity="center_vertical" android:background="@android:color/white"/>

        <TextView android:id="@+id/iv_pcenter_emotionStore" android:text="表情商城" android:layout_width="match_parent"
          		  android:textSize="16sp"   android:background="@android:color/white"    android:textColor="@android:color/black"   android:layout_height="45dip" android:layout_marginTop="10dip" android:paddingLeft="5dip" android:gravity="center_vertical"/>

        <TextView android:id="@+id/iv_pcenter_dcode" android:text="二维码名片"  android:background="@android:color/white" android:textColor="@android:color/black" android:paddingLeft="5dip" android:layout_width="match_parent"
                  android:textSize="16sp" android:layout_height="45dip" android:layout_marginTop="10dip" android:gravity="center_vertical"/>

        <TextView android:id="@+id/iv_pcenter_level" android:background="@android:color/white" android:text="微博等级" android:layout_width="match_parent"
                  android:textSize="16sp"  android:textColor="@android:color/black"
                  android:layout_height="45dip" android:layout_marginTop="10dip" android:paddingLeft="5dip" android:gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>